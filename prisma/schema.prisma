generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model courses {
  id          String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  courseTitle String
  description String
  image       String
  lessons     lessons[]
  price       Float
  sections    sections? @relation(fields: [sectionsId], references: [id])
  sectionsId  String?   @db.ObjectId
}

model lessons {
  id          String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  description String
  sectionsId  String   @db.ObjectId
  title       String
  video       String?
  courses     courses? @relation(fields: [coursesId], references: [id])
  coursesId   String?  @db.ObjectId
}

model sections {
  id          String    @id @default(dbgenerated()) @map("_id") @db.ObjectId
  coursesId   String    @db.ObjectId
  description String
  title       String
  courses     courses[]
}
